{{#each users}}
  <div class="box">
    <article class="media" style="align-items: center;">
      <div class="media-left">
        <span class="icon">
          <i class="fas fa-user-circle fa-2x"></i>
        </span>
      </div>
      <div class="media-content">
        <div class="content">
          <p class="is-size-4 has-text-weight-semibold" style="margin-bottom: 0;">
            {{firstName}} {{lastName}}
          </p>
        </div>
      </div>
      <div class="media-right">
        <a href="/admin/users/{{_id}}/delete" class="button is-small is-danger" onclick="return confirm('Are you sure you want to delete this user?');">
          <span class="icon is-small">
            <i class="fas fa-trash-alt"></i>
          </span>
        </a>
      </div>
    </article>
  </div>
{{/each}}
