<div class="card">
  <div class="card-image">
    <figure class="image is-256x256">
      {{#if location.img}}
        <img src="{{location.img}}" alt="Location Image" />
        <!-- Optionally, place the Delete button directly under the image for better context -->
        <form action="/location/{{location._id}}/deleteimage" method="POST" style="margin-top: 10px;">
          <button type="submit" class="button is-small is-danger">Delete Image</button>
        </form>
      {{else}}
        <p class="has-text-centered has-text-weight-bold is-size-4">Upload an Image</p>
      {{/if}}
    </figure>
  </div>
  <div class="card-content">
    <!-- Upload Image Form -->
    <form action="/location/{{location._id}}/uploadimage" method="POST" enctype="multipart/form-data">
      <div id="file-select" class="file has-name is-fullwidth">
        <label class="file-label">
          <input class="file-input" type="file" name="imagefile" accept="image/png, image/jpeg" />
          <span class="file-cta">
            <span class="file-icon">
              <i class="fas fa-upload"></i>
            </span>
            <span class="file-label">
              Choose a fileâ€¦
            </span>
          </span>
          <span class="file-name"></span>
        </label>
        <button type="submit" class="button is-info">Upload</button>
      </div>
    </form>
  </div>
</div>

<script>
  const fileInput = document.querySelector(".file-input"); fileInput.onchange = () => { if (fileInput.files.length > 0) { const fileName = document.querySelector(".file-name");
  fileName.textContent = fileInput.files[0].name; } };
</script>