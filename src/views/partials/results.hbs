{{#each locations}}
  <div class="box box-link-hover-shadow" style="margin-bottom: 1.5rem;">
    <article class="media">
      <div class="media-content">
        <div class="content">
          <h3 class="title is-4">{{title}} <span class="tag is-link">{{category}}</span></h3>
          <p>
            <strong>Games at this location:</strong> {{listGames games}}
          </p>
          {{#if x}}{{#if y}}
          <span class="tag is-light">
            <span class="icon is-small"  style="margin-right: 5px;">
              <i class="fas fa-map-marker-alt"></i>
            </span>
              Coords: X: {{x}}, Y: {{y}}
          </span>
          {{/if}}{{/if}}
        </div>
        <nav class="level is-mobile">
          <div class="level-left">
            <a href="/location/{{_id}}" class="button is-info is-light">
              <span class="icon is-small">
                <i class="fas fa-folder-open"></i>
              </span>
              <span>View Details</span>
            </a>
          </div>
        </nav>
      </div>
    </article>
  </div>
{{/each}}
